<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#043111</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#043111</item>
        <!-- Default font color -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="pointsButtonLeft" >
        <item name="android:layout_width" >50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="pointsButtonMiddle" >
        <item name="android:layout_width" >50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="pointsButtonRight" >
        <item name="android:layout_width" >50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="aceButton1" >
        <item name="android:layout_width" >50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="aceButton11" >
        <item name="android:layout_width" >50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

</resources>
